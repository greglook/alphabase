#!/usr/bin/env bash
# vim: ft=bash

set -e

cd "$(dirname "${BASH_SOURCE[0]}")/.."

if [[ -z $1 || $1 = clj ]]; then
    exec clj -M:dev:repl

elif [[ $1 = cljs ]]; then
    [[ -d "node_modules/ws" ]] || npm install --no-save ws
    echo "NYI: get this working" >&2
    exit 2
    # TODO: rlwrap?
    exec clj -m clojure.main dev/alphabase/cljs_repl.clj

else
    echo "Unknown REPL type: $1" >2
    exit 1
fi
