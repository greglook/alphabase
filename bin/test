#!/usr/bin/env bash
# vim: ft=bash

set -e

cd "$(dirname "${BASH_SOURCE[0]}")/.."

clojure -T:build javac

if [[ $1 = check ]]; then
    exec clojure -M:check

elif [[ $1 = coverage ]]; then
    shift
    exec clojure -M:coverage "$@"

elif [[ $1 = clj ]]; then
    exec clojure -M:test "$@"

else
    [[ -d node_modules/ws ]] || npm install --no-save ws
    exec clojure -M:test "$@"
fi
